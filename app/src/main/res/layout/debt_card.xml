<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="20dp"
    android:layout_margin="20dp"
    app:cardElevation="3dp"
    android:background="@drawable/card_border">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/primary400">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="20dp"
            android:paddingVertical="24dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lionel Messi"
                android:fontFamily="@font/opensans_bold"
                android:textColor="@color/neutral"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum Lunas"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="@color/neutral"
                android:layout_alignParentEnd="true"
                android:layout_alignBaseline="@id/tv_name"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp100.000,00"
                android:fontFamily="@font/opensans_extrabold"
                android:textColor="@color/neutral"
                android:textSize="24sp"
                android:layout_centerVertical="true"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_peminjaman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Peminjaman: 27/08/2024"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/neutral"
                android:textSize="14sp"
                android:layout_alignParentBottom="true"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ic_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delete_24px"
            android:layout_alignParentStart="true"
            android:layout_marginVertical="16sp"
            android:layout_marginStart="20dp"
            android:layout_alignParentBottom="true"
            android:contentDescription="Delete icon"
            app:tint="@color/red"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_jatuh_tempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jatuh Tempo: 27/11/2024"
            android:fontFamily="@font/opensans_bold"
            android:textSize="16sp"
            android:layout_marginEnd="20dp"
            android:layout_marginVertical="20sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/transparent"
            tools:ignore="HardcodedText"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>